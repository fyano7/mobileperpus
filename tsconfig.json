{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "jsx": "react-native",
    "types": [
      "react",
      "react-native",
      "nativewind/types"
    ],
    "allowJs": true,
    "strict": false,
    "target": "es2017",
    "moduleResolution": "node",
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "nativewind-env.d.ts",
    "nativewind-env.d.ts",
    "expo-env.d.ts"
  ]
}
